{% extends 'base.html.twig' %}

{% block title %}Novo Usuário{% endblock %}

{% block body %}
    <div class="container mt-5 margin-menu">
        <h2 class="mb-4 text-center">Novo Usuário</h2>

        {% if errors is defined and errors is not empty %}
            <div class="alert alert-danger" role="alert">
                <ul class="mb-0">
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'row g-3', 'enctype': 'multipart/form-data'}}) }}
            <div class="col-12">
                {{ form_row(form.nome, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-12">
                {{ form_row(form.login, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-12">
                {{ form_row(form.senha, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-12">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-12">
                {{ form_row(form.avatar, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
